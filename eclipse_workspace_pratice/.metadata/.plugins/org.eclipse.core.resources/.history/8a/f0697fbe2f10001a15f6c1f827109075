class ThreadT extends Thread{
	public ThreadT(String name) {
		super(name);
	}
	
	@Override
	public void run() {
		
		for (int i = 0; i < 10; i++) {
			System.out.printf("%s: %d\n",this.getName(),i);
			//i能被4整除时,休眠3秒
			if(i % 4 == 0 && Thread.currentThread().getName().equals("t1"));
		}
	}
}
